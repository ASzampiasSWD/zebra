<script>
window.onload = function() {
  let tableBody = document.getElementById("repairTable");
  // Create an HTML string for the new row
  let rows = {{{rows}}};
  console.log(rows);


Object.keys(rows).forEach(key => {
  const value = rows[key];

  // Insert a new row at the end of the tbody (-1 index means the last position)
  let newRow = tableBody.insertRow(-1);

  // Insert new cells into the row in the correct order (index starts at 0)
  let cell1 = newRow.insertCell(0);
  let cell2 = newRow.insertCell(1);
  let cell3 = newRow.insertCell(2);
  let cell4 = newRow.insertCell(3);
  let cell5 = newRow.insertCell(4);
  let cell6 = newRow.insertCell(5);
  let cell7 = newRow.insertCell(6);
  let cell8 = newRow.insertCell(7);

  // Add data to the cells
  cell1.innerHTML = value.repair_id;
  cell2.innerHTML = value.serial_number_id;
  cell3.innerHTML = value.printer_type;
  cell4.innerHTML = value.user_id;
  cell5.innerHTML = value.printer_location;
  cell6.innerHTML = value.station_number;
  cell7.innerHTML = '$' + value.money_saved;
  cell8.innerHTML = value.date_time_fixed;

  // Insert the HTML string immediately before the end of the tbody (effectively adding to the end)
  //tableBody.insertAdjacentHTML('beforeend', newRow);
  
  });
}



</script>


